{
    "env": {
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": [1, "single"],
        "quote-props": ["error", "as-needed"],
        "camelcase": [2, {"properties": "always"}]
    }
}
